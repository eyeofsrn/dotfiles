font-family = Hack
font-size = 16
background = #400c09
background-opacity = 0.7
background-blur = 10
mouse-hide-while-typing = true
cursor-style = bar
cursor-style-blink = true
resize-overlay = never
confirm-close-surface = false
window-padding-color = extend

keybind = alt+f=toggle_fullscreen
keybind = alt+m=toggle_maximize
keybind = alt+q=close_surface
keybind = alt+e=equalize_splits

keybind = alt+l=goto_split:right
keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:down
keybind = alt+k=goto_split:up

keybind = shift+alt+l=resize_split:right,25
keybind = shift+alt+h=resize_split:left,25
keybind = shift+alt+j=resize_split:down,25
keybind = shift+alt+k=resize_split:up,25

keybind = ctrl+alt+l=new_split:right
keybind = ctrl+alt+h=new_split:left
keybind = ctrl+alt+j=new_split:down
keybind = ctrl+alt+k=new_split:up
